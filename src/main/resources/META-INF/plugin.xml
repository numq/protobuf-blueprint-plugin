<idea-plugin>
    <id>com.numq.protobufblueprint</id>
    <name>Protobuf Blueprint</name>
    <vendor>numq</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.AppBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.numq.protobufblueprint.toolWindow.GeneratorToolWindowFactory"
                    id="Protobuf Blueprint"
                    icon="com.numq.protobufblueprint.icons.CustomIcons.LogoToolWindow"/>
    </extensions>

    <actions>
        <action id="com.numq.protobufblueprint.actions.OpenGeneratorToolWindowAction"
                class="com.numq.protobufblueprint.actions.OpenGeneratorToolWindowAction"
                text="Protobuf Blueprint"
                icon="com.numq.protobufblueprint.icons.CustomIcons.LogoAction">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
